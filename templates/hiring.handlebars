<div class="margin">
	<form onsubmit="TEMPLATE.hiring.submit(event)">
		<div>
			<label>{{L 'name'}}</label> <input type="text" name="name">
		</div>
		<div>
			<label>{{L 'email'}}</label> <input type="text" name="email">
		</div>
		<div>
			<label>{{L 'subject'}}</label> <input type="text" name="subject">
		</div>
		<div>
			<label>{{L 'message'}}</label> <textarea name="message"></textarea>
		</div>
		<div class="submit">
			<button type="submit" class="btn">{{L 'send'}}</button>
		</div>
	</form>
</div>
